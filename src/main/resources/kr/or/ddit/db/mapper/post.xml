<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post">
  <select id="getAllPost" parameterType="int" resultType="PostVo">
  		SELECT * 
		FROM post
		WHERE board_no = #{board_no}
  </select>
  
<!--   page 설정 -->
	<select id="selectPostPageList" resultType="PostVo" parameterType="pageVo">
  	 SELECT *
		FROM
		    (select rownum rn, a.*
		    from
		        (select *
		            from post
		            WHERE board_no=#{board_no}
		            order by post_no) a)
		WHERE rn BETWEEN (#{page} -1) * #{pageSize} + 1 AND #{page} * #{pageSize}      
  </select>
  <select id="selectPostTotalCnt" resultType="int">
  		SELECT COUNT(*)
  		FROM post
  </select>
  <select id="getPost" parameterType="int" resultType="PostVo">
  	SELECT *
	FROM post
	WHERE post_no=#{post_no}
  </select>
  
</mapper>